import javax.swing.*;  
import java.awt.*;
import java.awt.event.*;  
public class Test1 extends JFrame implements ActionListener{  
    JLabel l;  
    JCheckBox cb1,cb2,cb3;  
    JButton b;  
    JTextField tf1, tf2, tf3;
    Test1()
    {
    	Font prompt = new Font("Helvlight", Font.BOLD, 25);
    	Font description = new Font("Helvlight", Font.BOLD, 18);
        l=new JLabel("TASKS TO DO TODAY");
        l.setFont(prompt);
        l.setBounds(50,50,300,20);  
        
        cb1=new JCheckBox("Task 1"); 
        cb1.setFont(description); 
        cb1.setBounds(100,100,150,50);  
        tf1 = new JTextField();
        tf1.setBounds(270,100,200,55);
        
        cb2=new JCheckBox("Task2");  
        cb2.setFont(description);
        cb2.setBounds(100,150,90,50); 
        tf2 = new JTextField();
        tf2.setBounds(200,150,200,55);
        
        cb3=new JCheckBox("Task3");  
        cb3.setFont(description);
        cb3.setBounds(100,200,90,50);
        tf3 = new JTextField();
        tf3.setBounds(200,200,200,55); 
        
        b=new JButton("Done!");
        b.setFont(prompt);
        b.setBounds(100,250,200,40);  
        b.addActionListener(this);  
        add(l);add(cb1);add(cb2);add(cb3);add(b);add(tf1);add(tf2);add(tf3);
        setSize(400,400);  
        setLayout(null);  
        setVisible(true);  
        setDefaultCloseOperation(EXIT_ON_CLOSE);  
    }  
    public void actionPerformed(ActionEvent e){  
        String s="";
        if(cb1.isSelected()){ 
            s = s + tf1.getText() + "; ";
            tf1.setText("");
            cb1.setSelected(false);
        }  
        if(cb2.isSelected()){  
        	s = s + tf2.getText() + "; ";
        	tf2.setText("");
        	cb2.setSelected(false);
        }  
        if(cb3.isSelected()){  
        	s = s + tf3.getText() + "; ";
        	tf3.setText("");
        	cb3.setSelected(false);
        }   
        JOptionPane.showMessageDialog(this,"Tasks completed:\n"+s);  
    }  
    public static void main(String[] args) {  
        new Test1();  
    }  
} 